<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="imageUrl"
            type="String" />

        <variable
            name="numberOfSessions"
            type="String" />

        <variable
            name="numberOfMeeToos"
            type="String" />

        <variable
            name="nickName"
            type="String" />

        <variable
            name="bestSession"
            type="com.mobymagic.clairediary.vo.Session" />

        <variable
            name="numberOfComments"
            type="String" />

        <variable
            name="userType"
            type="String" />

        <import type="com.mobymagic.clairediary.vo.Status" />

        <variable
            name="sessionResource"
            type="com.mobymagic.clairediary.vo.Resource" />

        <variable
            name="alert"
            type="com.mobymagic.clairediary.vo.Alert" />

        <variable
            name="retryCallback"
            type="com.mobymagic.clairediary.ui.common.RetryCallback" />

        <variable
            name="empty"
            type="com.mobymagic.clairediary.vo.Empty" />

        <variable
            name="emptyCallback"
            type="com.mobymagic.clairediary.ui.common.EmptyCallback" />


    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/messenger_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.geustego.GuestEgoFragment">


            <include
                android:id="@+id/appBar"
                layout="@layout/layout_app_bar" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="horizontal"
                        tools:context=".ui.ego.EgoFragment">

                        <!-- TODO: Update blank fragment layout -->
                        <!--<ImageView-->
                        <!--android:id="@+id/sessions_home_app_logo"-->
                        <!--android:layout_width="56dp"-->
                        <!--android:layout_height="56dp"-->
                        <!--android:layout_marginTop="@dimen/nav_header_vertical_spacing"-->
                        <!--android:padding="8dp"-->
                        <!--android:src="@drawable/ic_product_logo_128dp"-->
                        <!--android:background="@drawable/oval_white"-->
                        <!--android:contentDescription="@null"/>-->
                        <ImageView
                            android:id="@+id/user_avartar"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/oval_white"
                            android:contentDescription="@string/your_avartar"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_product_logo_128dp"
                            android:text="@string/hello_blank_fragment"
                            app:avatarUrl="@{imageUrl}"
                            tools:background="@drawable/oval_white" />

                        <RelativeLayout
                            android:id="@+id/diary_session_count_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/number_of_sessions_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@id/sessions_TextView"
                                android:layout_alignEnd="@id/sessions_TextView"
                                android:text="@{numberOfSessions}"
                                android:textAlignment="center"
                                android:textAppearance="?android:textAppearanceLarge"
                                tools:text="128" />

                            <TextView
                                android:id="@+id/sessions_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/number_of_sessions_TextView"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginBottom="2dp"
                                android:padding="1dp"
                                android:text="@string/session"
                                android:textStyle="bold"
                                tools:text="Sessions" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_below="@id/sessions_TextView"
                                android:layout_alignStart="@id/sessions_TextView"
                                android:layout_alignLeft="@id/sessions_TextView"
                                android:layout_alignEnd="@id/sessions_TextView"
                                android:layout_alignRight="@id/sessions_TextView"
                                android:layout_margin="2dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/claire_icon_svg" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/me_too_count_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            app:layout_constraintStart_toEndOf="@id/user_avartar">

                            <TextView
                                android:id="@+id/follow_count_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@id/follows_TextView"
                                android:layout_alignLeft="@id/follows_TextView"
                                android:layout_alignEnd="@id/follows_TextView"
                                android:layout_alignRight="@id/follows_TextView"
                                android:text="@{numberOfMeeToos}"
                                android:textAlignment="center"
                                android:textAppearance="?android:textAppearanceLarge"
                                tools:text="128" />

                            <TextView
                                android:id="@+id/follows_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/follow_count_textView"
                                android:layout_margin="2dp"
                                android:text="@string/follows"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_below="@id/follows_TextView"
                                android:layout_alignStart="@id/follows_TextView"
                                android:layout_alignLeft="@id/follows_TextView"
                                android:layout_alignEnd="@id/follows_TextView"
                                android:layout_alignRight="@id/follows_TextView"
                                android:layout_margin="2dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/ic_outline_add_red" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/thanks_count_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:layout_constraintStart_toEndOf="@id/user_avartar">

                            <TextView
                                android:id="@+id/number_of_comments_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@id/adviceTextView"
                                android:layout_alignLeft="@id/adviceTextView"
                                android:layout_alignEnd="@id/adviceTextView"
                                android:layout_alignRight="@id/adviceTextView"
                                android:text="@{numberOfComments}"
                                android:textAlignment="center"
                                android:textAppearance="?android:textAppearanceLarge"
                                tools:text="386" />

                            <TextView
                                android:id="@+id/adviceTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/number_of_comments_text_view"
                                android:layout_margin="2dp"
                                android:padding="1dp"
                                android:text="@string/advice"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_below="@id/adviceTextView"
                                android:layout_alignStart="@id/adviceTextView"
                                android:layout_alignLeft="@id/adviceTextView"
                                android:layout_alignEnd="@id/adviceTextView"
                                android:layout_alignRight="@id/adviceTextView"
                                android:layout_margin="2dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/comment_icon_red" />
                        </RelativeLayout>


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/nickname_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="start"
                            android:layout_toStartOf="@+id/user_type_text_view"
                            android:layout_toLeftOf="@+id/user_type_text_view"
                            android:drawablePadding="4dp"

                            android:hint="@string/nickname"
                            android:text="@{nickName}"

                            android:textAppearance="?android:textAppearanceMedium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/user_type_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:background="#721fb6"
                            android:drawablePadding="4dp"
                            android:text="@{userType}"
                            android:textAlignment="center"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:text="Admin" />
                        />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/add_friend_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="end"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:text="@string/request_chat"
                            android:textAppearance="?android:textAppearance"
                            android:textColor="@color/theme_accent"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:backgroundColorHex="@{bestSession.colorHex}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="@string/best_session"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="@color/secondary_text_light"
                        android:textStyle="bold" />

                    <androidx.emoji.widget.EmojiTextView
                        android:id="@+id/best_session_title_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:text="@{bestSession.title}"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/secondary_text_light"
                        android:textStyle="bold"
                        app:backgroundColorHex="@{bestSession.colorHex}"
                        tools:text="hfhfhfhfhfhfhhhhhhh" />

                    <androidx.emoji.widget.EmojiTextView
                        android:id="@+id/best_session_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="2"
                        android:padding="8dp"
                        android:text="@{bestSession.message}"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/secondary_text_light"
                        app:backgroundColorHex="@{bestSession.colorHex}"
                        tools:text="hfhfhfhfhfhfhhhhhhh" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <RelativeLayout
                            android:id="@+id/best_seesion_like_count_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="end"
                            android:layout_margin="4dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:gravity="end">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/best_seesion_like_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{String.valueOf(bestSession.meToos.size())}"
                                android:textColor="@color/white"
                                tools:text="22 " />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/best_seesion_like_count_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginLeft="4dp"
                                android:layout_toEndOf="@id/best_seesion_like_count"
                                android:layout_toRightOf="@id/best_seesion_like_count"
                                app:srcCompat="@drawable/high_five_icon"
                                tools:text="22 " />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="16dp"
                            android:layout_toStartOf="@id/best_seesion_like_count_layout"
                            android:layout_toLeftOf="@id/best_seesion_like_count_layout"
                            android:gravity="start">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/best_seesion_follow_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{String.valueOf(bestSession.followers.size())}"
                                android:textColor="@color/white"
                                tools:text="22 " />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/best_seesion_follow_count_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/best_seesion_follow_count"
                                android:layout_toRightOf="@id/best_seesion_follow_count"
                                app:srcCompat="@drawable/ic_outline_add_red"
                                tools:text="22 " />
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/session_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="LinearLayoutManager"
                    tools:listitem="@layout/geust_ego_session_item" />

                <include
                    layout="@layout/layout_loading_error_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:callback="@{() -> retryCallback.retry()}"
                    app:resource="@{sessionResource}" />

                <include
                    layout="@layout/layout_empty_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:callback="@{() -> emptyCallback.onEmptyButtonClicked()}"
                    app:empty="@{empty}" />

            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</layout>