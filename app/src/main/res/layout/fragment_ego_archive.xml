<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="currentDate"
            type="String" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".ui.ego.EgoArchiveFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/calenderDayTextView"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="5"
                    android:text="@{currentDate}"
                    android:textAlignment="center"
                    android:textAppearance="?android:textAppearanceMedium"
                    tools:text="April 24 2018" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.github.sundeepk.compactcalendarview.CompactCalendarView
                    android:id="@+id/compactcalendar_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:compactCalendarBackgroundColor="#ffe95451"
                    app:compactCalendarCurrentDayBackgroundColor="#B71C1C"
                    app:compactCalendarCurrentSelectedDayBackgroundColor="@color/colorPrimaryDark"
                    app:compactCalendarDisplayOtherMonthDays="true"
                    app:compactCalendarMultiEventIndicatorColor="#ffd"
                    app:compactCalendarTextColor="#fff"
                    app:compactCalendarTextSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>