<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.usersessiontypes.UserSessionTypesFragment">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/sessionTypesPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/sessionTypesTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemIconTint="@color/tab_icon_text_colors"
            app:itemTextColor="@color/white"
            app:menu="@menu/bottom_nav_user_session_types" />

    </LinearLayout>

</layout>