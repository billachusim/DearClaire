<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/app_bar"
            layout="@layout/layout_app_bar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/how_claire_works_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    app:cardBackgroundColor="#8C163E"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_family_medium"
                            android:text="@string/how_claire_works_read_title"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/primary_text_light" />

                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:contentDescription="@null"
                            android:src="@drawable/claire_new_logo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/how_claire_works_details"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/primary_text_light" />

                        <TextView
                            android:id="@+id/how_claire_works_short_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@string/font_family_regular"
                            android:maxLines="6"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/secondary_text_light"
                            app:html="@{@string/common_how_claire_works}" />

                        <TextView
                            android:id="@+id/how_claire_works_long_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_family_regular"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/secondary_text_light"
                            android:visibility="gone"
                            app:html="@{@string/common_how_claire_works}" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/how_alter_ego_works_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#260E50"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_family_medium"
                            android:text="@string/how_claire_works_read_alter_ego_works_title"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/primary_text_light" />

                        <TextView
                            android:id="@+id/how_alter_ego_works_short_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@string/font_family_regular"
                            android:maxLines="6"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/secondary_text_light"
                            app:html="@{@string/common_how_alter_ego_works}" />

                        <TextView
                            android:id="@+id/how_alter_ego_works_long_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_family_regular"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/secondary_text_light"
                            android:visibility="gone"
                            app:html="@{@string/common_how_alter_ego_works}" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/donate_support_claire_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#170303"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_family_medium"
                            android:text="@string/how_claire_works_donate_to_claire"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/primary_text_light" />

                        <TextView
                            android:id="@+id/donate_support_claire_short_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@string/font_family_regular"
                            android:maxLines="6"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/secondary_text_light"
                            app:html="@{@string/how_claire_works_donate_message}" />

                        <TextView
                            android:id="@+id/donate_support_claire_long_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_family_regular"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/secondary_text_light"
                            android:visibility="gone"
                            app:html="@{@string/how_claire_works_donate_message}" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/feedback_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#62CA9C"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_family_medium"
                            android:text="@string/common_feedback"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/primary_text_light" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>